.good{
  width: 100%;
  height: 300px;
  background: #f5f5f5;
  overflow: hidden;
  border-bottom: 5px solid orangered;
}
.name{
  font-size: 25px;
  margin: 20px 0 0 50px;
}
.line{
  width: 90%;
  height: 4px;
  background: #ccc;
  margin:10px auto;
}
.content>image{
  width: 40%;
  height: 200px;
  margin-left: 20px;
  float: left;
}
.right{
  width: 45%;
  height:180px;
  float: left;
  padding: 10px; 
}
.price{
  color: orangered;
  font-size: 30px;
  margin: 20px;
}