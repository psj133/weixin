/* pages/pay/pay.wxss */
.container{
  height: 100%;
}
.address{
  width: 100%;
  height: 120px;
  background: skyblue;
  display: flex;
  justify-content: space-between;
  border-bottom: 5px solid orangered;
}
.address1{
  width: 100%;
  height: 120px;
  background: skyblue;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  border-bottom: 5px solid orangered;
}
.add{
   line-height: 120px;
  margin-left: 20px;
}
.selAddr{
  width: 50px;
  height: 50px;
  margin-top:35px;
  margin-right:100px
}
.head,.footer{
  display: flex;
  justify-content: space-between;
  width: 90%;
  margin: 10px auto;
}
.goodsList{
  width: 100%;
  /* background: #f5f5f5; */
  border-bottom: 5px solid orangered;
  display: flex;
  flex-direction: column;
  justify-content: space-between
}
.title{
  width: 96%;
  height:49px;
  padding-left: 20px;
  line-height:49px;
  border-bottom: 1px solid #ccc;
}
.goods{
  width: 100%;
  flex:1;
  border-bottom: 1px solid #ccc;
  /* display: flex; */
}
.goods .left{
  width: 30%;
  height: 100%;
  float: left;
} 
.goods .middle{
  width: 40%;
  height: 100%;
    float: left;
}
.goods .middle view,.goods .right view{
  margin: 30px;
}
.goods .right{
  width: 30%;
  height: 100%;
    float: right;
}
.bottom{
  width: 94%;
  height: 50px;
  line-height: 50px;
  padding-left: 30px;
}
.total{
  width: 100%;
  height: 50px;
  background:#fff;
  line-height: 50px;
  border-top:1px solid #ccc; 
  position: fixed;
  bottom: 0;
  left: 0;
  display:flex;
  justify-content: space-between;
}
.shouldPay{
  margin-left: 20px;
}
.commit{
  width: 200px;
  height: 50px;
  text-align: center;
  line-height: 50px;
  background: red;
}
