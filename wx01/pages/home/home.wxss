/* pages/home/home.wxss */
.banner-swiper{
  width: 750rpx;
  height:400rpx;
}
.banner-swiper image{
  width: 100%;
  height: 100%;
}
input{
  width: 320px;
  height:30px;
  border: 1px solid #ccc;
  margin: 10px;
}
.search{
  display: flex;
}
icon{
  margin-top: 12px;
}
.theme{
  height: 250px;
  width: 100%;
  background:sandybrown;
  display: flex;
  flex-wrap: wrap;
}
.list{
  width: 25%;
  height: 125px;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: flex-end;
  
}
.img{
  width: 100px;
  height:100px;
  background: red;
  border-radius: 50px;
}
.good{
  width: 100%;
  height: 300px;
  background: #f5f5f5;
  overflow: hidden;
  border-bottom: 5px solid orangered;
}
.name{
  font-size: 25px;
  margin: 20px 0 0 50px;
}
.line{
  width: 90%;
  height: 4px;
  background: #ccc;
  margin:10px auto;
}
.content>image{
  width: 40%;
  height: 200px;
  margin-left: 20px;
  float: left;
}
.right{
  width: 45%;
  height:180px;
  float: left;
  padding: 10px; 
}
.price{
  color: orangered;
  font-size: 30px;
  margin: 20px;
}